{
  "$schema": "https://biomejs.dev/schemas/2.4.2/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "includes": [
      "**",
      "!**/node_modules/**",
      "!**/.next/**",
      "!**/.contentlayer/**",
      "!**/coverage/**",
      "!**/public/static/**",
      "!**/pnpm-lock.yaml"
    ]
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "bracketSpacing": true,
      "arrowParentheses": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  },
  "linter": { "enabled": false },
  "assist": { "actions": { "source": { "organizeImports": "off" } } }
}
